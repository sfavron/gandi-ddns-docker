<?xml version="1.0" encoding="utf-8"?>
    <Container version="2">
    <Name Default="Gandi DDNS">Gandi DDNS</Name>
    <Repository>sfavron/gandi-ddns-docker</Repository>
    <Config Type="Variable" Name="API Key" Target="GANDI_API_KEY" Default="" Description="Gandi.net production API key" Mask="true" Required="true">API Key</Config>
    <Config Type="Variable" Name="Domain" Target="GANDI_DOMAIN" Default="" Description="Domain for which to update DNS" Required="true">Domain</Config>
    <Config Type="Variable" Name="A Record Name" Target="GANDI_A_NAME" Default="" Description="Name of the A record to be updated" Display="advanced">A Record Name</Config>
    <Config Type="Variable" Name="TTL" Target="GANDI_TTL" Default="" Description="DNS record TTL" Display="advanced">TTL</Config>
    <Config Type="Variable" Name="Gandi API Path" Target="GANDI_API" Default="" Description="Gandi.net API path" Display="advanced">Gandi API Path</Config>
    <Config Type="Variable" Name="Ipify Retries" Target="IPIFY_RETRIES" Default="" Description="Number of retries for ipify requests" Display="advanced">Ipify Retries</Config>
    <Config Type="Variable" Name="Ipify API Path" Target="IPIFY_API" Default="" Description="Ipify API path" Display="advanced">Ipify API Path</Config>
</Container>
